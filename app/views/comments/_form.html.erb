<%= simple_form_for([project, task, comment], html: { data: { turbo: true } }) do |f| %>
  <%= f.error_notification %>

  <div class="space-y-3">
    <div>
      <%= f.input :content, as: :text, label: false, placeholder: "Write your comment here...", input_html: { rows: 3, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" } %>
    </div>

    <div class="flex justify-end">
      <%= f.button :submit, "Add Comment", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>
<% end %>
