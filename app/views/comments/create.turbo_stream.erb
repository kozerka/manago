<% if @comment.persisted? %>
  <%= turbo_stream.prepend "comments" do %>
    <%= render "comments/comment", comment: @comment %>
  <% end %>
  <%= turbo_stream.replace "comment_form" do %>
    <%= render "comments/form", comment: Comment.new, project: @project, task: @task %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "comment_form" do %>
    <%= render "comments/form", comment: @comment, project: @project, task: @task %>
  <% end %>
<% end %>
