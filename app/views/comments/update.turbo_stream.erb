<%= turbo_stream.replace "comment_#{@comment.id}" do %>
  <%= render partial: 'comments/comment', locals: {
    comment: @comment,
    project: @project,
    task: @task,
    archived_view: @project&.status == 'archived'
  } %>
<% end %>

<%= turbo_stream.replace "flash" do %>
  <%= render partial: "shared/flash", locals: { flash: flash } %>
<% end %>
