<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="bg-white p-8 rounded-lg shadow-lg">
      <div>
        <h2 class="text-center text-3xl font-extrabold text-gray-900">
          Sign up
        </h2>
      </div>

      <%= render 'devise/shared/error_explanation', resource: resource %>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
        <div class="space-y-4">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= f.input :first_name,
                          required: true,
                          autofocus: true,
                          error: false,
                          input_html: { class: "appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" },
                          wrapper_html: { class: "w-full" },
                          label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
            </div>
            <div>
              <%= f.input :last_name,
                          required: true,
                          error: false,
                          input_html: { class: "appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" },
                          wrapper_html: { class: "w-full" },
                          label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
            </div>
          </div>

          <%= f.input :email,
                      required: true,
                      error: false,
                      input_html: { class: "appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" },
                      wrapper_html: { class: "w-full" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

          <%= f.input :password,
                      required: true,
                      error: false,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { class: "appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", autocomplete: "new-password" },
                      wrapper_html: { class: "w-full" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" },
                      hint_html: { class: "mt-1 text-sm text-gray-500" } %>

          <%= f.input :password_confirmation,
                      required: true,
                      error: false,
                      input_html: { class: "appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", autocomplete: "new-password" },
                      wrapper_html: { class: "w-full" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
        </div>

        <div>
          <%= f.button :submit, "Sign up", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
