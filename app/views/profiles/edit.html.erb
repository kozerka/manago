<div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
  <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
    <h1 class="text-2xl font-bold text-gray-900">Edit Profile</h1>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">Update your personal information</p>
  </div>

  <div class="px-4 py-5 sm:p-6">
    <%= simple_form_for(@user, url: profile_path, method: :patch) do |f| %>
      <%= f.error_notification class: "p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50" %>

      <div class="space-y-6">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <!-- First Name Field -->
          <div class="form-group">
            <%= f.label :first_name, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.input :first_name,
                      label: false,
                      input_html: {
                        class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 px-4"
                      } %>
          </div>

          <!-- Last Name Field -->
          <div class="form-group">
            <%= f.label :last_name, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.input :last_name,
                      label: false,
                      input_html: {
                        class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 px-4"
                      } %>
          </div>
        </div>

        <!-- Email Field -->
        <div class="form-group">
          <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.input :email,
                    label: false,
                    input_html: {
                      class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 px-4"
                    } %>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="mt-8 flex items-center justify-end space-x-3">
        <%= link_to "Cancel", profile_path, class: "text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" %>
        <%= f.button :submit, "Update Profile", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5" %>
      </div>
    <% end %>
  </div>
</div>
